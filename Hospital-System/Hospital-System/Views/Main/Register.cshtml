@model Hospital_System.Models.DTOs.User.RegisterUserDTO

@{
    ViewData["Title"] = "Register";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/RegForm.css" />


<video src="~/Images/Tokyo.mp4" muted autoplay loop></video>

<div class="Full">
    <div class="FullBox">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="field">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" autocomplete="off" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>


            <div class="field">
                <label asp-for="Password"></label>
                <input asp-for="Password" autocomplete="off" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="field">

                <label asp-for="Email"></label>
                <input asp-for="Email" autocomplete="off" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>




            <div class="field">

                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" autocomplete="off" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>


            <div class="field">

                <label asp-for="Roles"></label>
                <input asp-for="Roles" autocomplete="off" />
                <span asp-validation-for="Roles" class="text-danger"></span>
            </div>

           

            <input type="submit" value="Signup" class="btn1" />


        </form>
    </div>
</div>

